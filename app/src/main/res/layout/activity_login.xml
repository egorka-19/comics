<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/color_main_BG"
    tools:context=".UI.LoginActivity">

    <ImageView
        android:id="@+id/input"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:layout_below="@id/login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/input" />

    <ImageView
        android:id="@+id/input_2"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:layout_below="@id/input"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/input" />

    <ImageView
        android:id="@+id/applogo"
        android:layout_width="300dp"
        android:layout_height="275dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="-2dp"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        android:src="@drawable/login_logo" />

    <EditText
        android:id="@+id/register_phone_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="25dp"
        android:backgroundTint="@android:color/transparent"
        android:fontFamily="@font/inter_regular"
        android:hint="Номер телефона"
        android:inputType="number"
        android:padding="15dp"
        android:textColor="@color/black"
        android:textColorHint="#A4A4A4"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/register_password_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/register_phone_input"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="25dp"
        android:backgroundTint="@android:color/transparent"
        android:fontFamily="@font/inter_regular"

        android:hint="Пароль"
        android:inputType="textPassword"
        android:padding="18dp"
        android:textColor="@color/black"
        android:textColorHint="#A4A4A4"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/linear_check"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/register_password_input"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="30dp"
        android:contentDescription="@string/app_name"
        android:orientation="horizontal">

        <com.rey.material.widget.CheckBox
            android:id="@+id/register_checkbox"
            style="@style/Material.Drawable.CheckBox"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_weight="2"
            android:contentDescription="@string/app_name"
            android:fontFamily="@font/inter_medium"
            android:gravity="center_vertical"
            android:layoutDirection="ltr"
            android:singleLine="true"
            android:text="Запомнить меня"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/register_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/linear_check"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="@android:color/transparent"
        android:contentDescription="@string/app_name"
        android:padding="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/login_btn" />

    <ImageView
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/applogo"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="50dp"
        android:backgroundTint="@android:color/transparent"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/login" />

    <ImageView
        android:id="@+id/or_iv"
        android:contentDescription="@string/app_name"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_below="@id/register_button"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/or_iv" />

    <ImageButton
        android:id="@+id/swipe_btn"
        android:layout_width="148dp"
        android:layout_height="50dp"
        android:layout_below="@id/or_iv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:backgroundTint="@android:color/transparent"
        android:contentDescription="@string/app_name"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/create_new_acc" />

</RelativeLayout>